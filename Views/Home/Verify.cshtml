@model WebApplication4.Models.Claim

@{
    ViewData["Title"] = "Verify";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #000 !important;
            color: #FFD700 !important; 
        }

        h1 {
            color: #FFD700 !important; 
        }

        .alert-info {
            background-color: #333 !important; 
            border-color: #444 !important;fd
            color: #FFD700 !important; 
        }

            .alert-info .alert-link {
                color: #FFD700 !important;
            }

        p {
            color: #FFD700 !important;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <h1>@ViewData["Title"]</h1>
        <div class="alert alert-info" role="alert">
            Please enter the verification code sent to your email address to complete the process.
        </div>
        <p>Thank you for submitting your claim. Your claim number is <strong>@Model.ClaimNumber</strong>.</p>
        <p>Your claim is currently under review. You can track the status of your claim using the track page.</p>
    </div>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
