@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #000;
            color: #FFD700; 
        }

        header {
            background: #000;
            color: #FFD700; 
        }

        .hero-section {
            background: #111;
            padding: 60px 0;
        }

        .hero-text {
            text-align: center;
            margin-bottom: 40px;
        }

            .hero-text h2, .hero-text p {
                color: #FFD700; 
            }

        .feature-icon {
            font-size: 40px;
            color: #FFD700; 
        }

        .footer {
            background: #000;
            padding: 20px 0;
            text-align: center;
            color: blue;
        }

        a {
            color: #FFD700;
        }

            a:hover {
                color: #FFA500; 
            }

        .bg-light {
            background-color: #333 !important;
        }

        .text-center {
            color: #FFD700; 
        }
    </style>
</head>
<body>
    <header class="bg-dark text-white py-3">
        <div class="container">
            <h1 class="mb-0">Contract Monthly Claim System</h1>
        </div>
    </header>

    <section class="hero-section">
        <div class="container">
            <div class="hero-text">
                <h2>Welcome to Contract Monthly Claim System</h2>
                <p>Your easy solution for managing and submitting monthly claims.</p>
                <a href="#features" class="btn btn-primary btn-lg">Learn More</a>
            </div>
        </div>
    </section>

    <section id="features" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Features</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="feature-icon">
                            <i class="fas fa-clipboard-list"></i>
                        </div>
                        <h4>Easy Claim Submission</h4>
                        <p>Submit your monthly claims quickly and efficiently with our user-friendly interface.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="feature-icon">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                        <h4>Track Your Claims</h4>
                        <p>Keep track of your claim status and history with real-time updates and notifications.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="text-center">
                        <div class="feature-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <h4>Upload Supporting Documents</h4>
                        <p>Attach and manage all necessary supporting documents directly within the system.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="how-it-works" class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-4">How It Works</h2>
            <div class="row">
                <div class="col-md-4">
                    <h4>1. Create an Account</h4>
                    <p>Sign up to create your account and gain access to the claim submission system.</p>
                </div>
                <div class="col-md-4">
                    <h4>2. Submit Your Claim</h4>
                    <p>Fill out the claim form, upload supporting documents, and submit your claim.</p>
                </div>
                <div class="col-md-4">
                    <h4>3. Manage Your Claims</h4>
                    <p>Track your claim status, make updates, and view your claim history at any time.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="contact" class="py-5">
        <div class="container">
            <h2 class="text-center mb-4">Contact Us</h2>
            <div class="row">
                <div class="col-md-6">
                    <h4>Get in Touch</h4>
                    <p>For any questions or support, feel free to reach out to us via the following contact methods:</p>
                    <ul>
                        <li>Email: <a href="mailto:boitumelokhauoe01@gmail.com">boitumelokhauoe01@gmail.com</a></li>
                        <li>Phone: 0717099812</li>
                        <li>Address: 123 Claim Street, Johannesburg, South Africa</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <h4>Follow Us</h4>
                    <p>Stay updated with our latest news and updates:</p>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#" class="btn btn-primary">Facebook</a></li>
                        <li class="list-inline-item"><a href="#" class="btn btn-primary">Twitter</a></li>
                        <li class="list-inline-item"><a href="#" class="btn btn-primary">LinkedIn</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer">
        <p>&copy; @DateTime.Now.Year Contract Monthly Claim System. All Rights Reserved.</p>
    </footer>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
